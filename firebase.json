{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "speak/**",
      "voice/**",
      "tracking/**"
    ],
    "rewrites": [
      {
        "source": "/map/**",
        "destination": "/map.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
