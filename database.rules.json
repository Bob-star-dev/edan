{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    
    "ml_results": {
      ".read": true,
      ".write": "auth != null",
      "direction": {
        ".validate": "newData.isString() && (newData.val() == 'left' || newData.val() == 'right' || newData.val() == 'stop' || newData.val() == 'both' || newData.val() == 'none')"
      },
      "timestamp": {
        ".validate": "newData.isNumber()"
      },
      "confidence": {
        ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 1"
      },
      "object_detected": {
        ".validate": "newData.isString()"
      }
    },
    
    "esp32_status": {
      ".read": true,
      ".write": true,
      "connected": {
        ".validate": "newData.isBoolean()"
      },
      "motor_active": {
        ".validate": "newData.isString() && (newData.val() == 'left' || newData.val() == 'right' || newData.val() == 'stop' || newData.val() == 'both' || newData.val() == 'none')"
      },
      "last_update": {
        ".validate": "newData.isNumber()"
      },
      "ip_address": {
        ".validate": "newData.isString()"
      }
    },
    
    "images": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$imageId": {
        "data": {
          ".validate": "newData.isString()"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        }
      }
    }
  }
}

